<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Salary_Rule</fullName>
    <active>true</active>
    <errorConditionFormula>AND( NOT( ISNEW() ) , Salary__c  &lt;  PRIORVALUE( Salary__c ) )</errorConditionFormula>
    <errorMessage>Salary Cannot Be Decreased</errorMessage>
</ValidationRule>
